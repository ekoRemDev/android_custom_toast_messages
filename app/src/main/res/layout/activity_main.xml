<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dev.jibeshi.com.toastmessages.MainActivity">

    <Button
        android:id="@+id/btnSimpleToastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Simple Toast Message " />

    <Button
        android:id="@+id/btnCustomToastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Custom Toast Message " />

</LinearLayout>
